{
  "name": "thiele-machine-verilog-simulator",
  "displayName": "Thiele Machine Verilog Simulator",
  "description": "Verilog simulation tools for the Thiele Machine hardware implementation",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:verilog-simulator.clearCache",
    "onCommand:verilog-simulator.generateWaveform",
    "onCommand:verilog-simulator.regenerateVcd"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "verilog-simulator.clearCache",
        "title": "Clear Environment Cache",
        "category": "Verilog Simulator"
      },
      {
        "command": "verilog-simulator.generateWaveform",
        "title": "Generate Waveform",
        "category": "Verilog Simulator"
      },
      {
        "command": "verilog-simulator.regenerateVcd",
        "title": "Regenerate VCD File (Robust Mode)",
        "category": "Verilog Simulator"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "verilog-simulator.clearCache"
        },
        {
          "command": "verilog-simulator.generateWaveform"
        },
        {
          "command": "verilog-simulator.regenerateVcd"
        }
      ],
      "editor/context": [
        {
          "command": "verilog-simulator.generateWaveform",
          "when": "resourceExtname == .v"
        },
        {
          "command": "verilog-simulator.regenerateVcd",
          "when": "resourceExtname == .v"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "eslint": "^8.34.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^4.9.5",
    "@vscode/test-electron": "^2.2.3"
  }
}