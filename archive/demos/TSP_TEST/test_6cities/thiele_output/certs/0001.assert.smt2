(set-logic QF_LIA)
(declare-const tour (Array Int Int))
(declare-const cost Int)

; Each position in tour gets a valid city ID
(assert (and (>= (select tour 1) 1) (<= (select tour 1) 6)))
(assert (and (>= (select tour 2) 1) (<= (select tour 2) 6)))
(assert (and (>= (select tour 3) 1) (<= (select tour 3) 6)))
(assert (and (>= (select tour 4) 1) (<= (select tour 4) 6)))
(assert (and (>= (select tour 5) 1) (<= (select tour 5) 6)))
(assert (and (>= (select tour 6) 1) (<= (select tour 6) 6)))
(assert (not (= (select tour 1) (select tour 2))))
(assert (not (= (select tour 1) (select tour 3))))
(assert (not (= (select tour 1) (select tour 4))))
(assert (not (= (select tour 1) (select tour 5))))
(assert (not (= (select tour 1) (select tour 6))))
(assert (not (= (select tour 2) (select tour 3))))
(assert (not (= (select tour 2) (select tour 4))))
(assert (not (= (select tour 2) (select tour 5))))
(assert (not (= (select tour 2) (select tour 6))))
(assert (not (= (select tour 3) (select tour 4))))
(assert (not (= (select tour 3) (select tour 5))))
(assert (not (= (select tour 3) (select tour 6))))
(assert (not (= (select tour 4) (select tour 5))))
(assert (not (= (select tour 4) (select tour 6))))
(assert (not (= (select tour 5) (select tour 6))))
(assert (>= cost 0))
